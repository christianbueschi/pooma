generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Team {
  id        String   @id @default(cuid()) @map("_id")
  cardMode  CardMode
  isLocked  Boolean  @default(false)
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  members   Member[]

  @@map("teams")
}

model Member {
  id               String      @id @default(cuid()) @map("_id")
  name             String
  card             String?
  state            MemberState @default(ACTIVE)
  team             Team?       @relation(fields: [teamId], references: [id])
  teamId           String?
  isSpectactorMode Boolean     @default(false)

  @@map("members")
}

enum CardMode {
  FIBONACCI
  TSHIRT
}

enum MemberState {
  ACTIVE
  REMOVED
}
